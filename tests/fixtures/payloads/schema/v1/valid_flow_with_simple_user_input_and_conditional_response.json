{
  "$schema": "https://shipany.bot/schemas/bot/v1.0.json",
  "name": "Simple Chat Bot",
  "description": "A simple chat bot that responds to user input.",
  "version": "1.0",
  "conversations": [
    {
      "$id": "start-conversation",
      "activations": [
        {
          "command": "/start",
          "next-step": "start"
        }
      ],
      "steps": [
        {
          "$id": "start",
          "actions": [
            {
              "type": "answer",
              "content": "Welcome to the chat. How can I assist you?"
            },
            {
              "type": "transition",
              "next-step": "help_state",
              "condition": {
                "==": [
                  {
                    "var": "message.text"
                  },
                  "help"
                ]
              }
            },
            {
              "type": "transition",
              "next-step": "other_state",
              "condition": {
                "not": [
                  {
                    "==": [
                      {
                        "var": "message.text"
                      },
                      "help"
                    ]
                  }
                ]
              }
            }
          ]
        },
        {
          "$id": "help_state",
          "actions": [
            {
              "type": "answer",
              "content": "Sure, I can help you with that!"
            },
            {
              "type": "transition",
              "next-step": "end"
            }
          ]
        },
        {
          "$id": "other_state",
          "actions": [
            {
              "type": "answer",
              "content": "I'm sorry, I didn't understand. Can you please repeat?"
            },
            {
              "type": "transition",
              "next-step": "end"
            }
          ]
        },
        {
          "$id": "end",
          "actions": [
            {
              "type": "answer",
              "content": "Thank you for chatting with us. Have a great day!"
            }
          ]
        }
      ]
    }
  ]
}