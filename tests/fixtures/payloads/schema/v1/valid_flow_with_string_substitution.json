{
  "$schema": "https://shipany.bot/schemas/bot/v1.0.json",
  "name": "Simple Chat",
  "description": "A simple chat bot that greets the user and asks for their name.",
  "version": "1.0",
  "conversations": [
    {
      "$id": "start-conversation",
      "activations": [
        {
          "command": "/start",
          "next-step": "start"
        }
      ],
      "steps": [
        {
          "$id": "start",
          "actions": [
            {
              "type": "answer",
              "content": "Welcome to the chat, {{username}}. How can I assist you?"
            },
            {
              "type": "transition",
              "next-step": "next"
            }
          ]
        },
        {
          "$id": "next",
          "actions": [
            {
              "type": "answer",
              "content": "Understood, what would you like to do next?"
            },
            {
              "type": "transition",
              "next-step": "end"
            }
          ]
        },
        {
          "$id": "end",
          "actions": [
            {
              "type": "answer",
              "content": "Thank you for chatting with us, {{username}}. Have a great day!"
            }
          ]
        }
      ]
    }
  ]
}