{
  "$schema": "https://shipany.bot/schemas/bot/v1.0.json",
  "name": "Simple Bot",
  "description": "A simple bot that sends a welcome message.",
  "version": "1.0",
  "conversations": [
    {
      "$id": "start-conversation",
      "activations": [
        {
          "command": "/start",
          "next-step": "start"
        }
      ],
      "steps": [
        {
          "$id": "end",
          "actions": [
            {
              "type": "answer",
              "content": "Welcome to the chat."
            }
          ]
        }
      ]
    }
  ]
}