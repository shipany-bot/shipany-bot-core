{
  "$schema": "https://shipany.bot/schemata/v1.0/flow.json",
  "name": "Simple Chat",
  "description": "A simple chat bot that greets the user and asks what they would like to do next.",
  "version": "1.0.0",
  "conversations": [
    {
      "$id": "start-conversation",
      "activations": [
        {
          "command": "/start",
          "next-step": "start"
        }
      ],
      "steps": [
        {
          "$id": "start",
          "actions": [
            {
              "type": "answer",
              "content": "Welcome to the chat. How can I assist you?"
            },
            {
              "type": "transition",
              "next-step": "next"
            }
          ]
        },
        {
          "$id": "next",
          "actions": [
            {
              "type": "answer",
              "content": "What would you like to do next?"
            },
            {
              "type": "transition",
              "next-step": "end"
            }
          ]
        },
        {
          "$id": "end",
          "actions": [
            {
              "type": "answer",
              "content": "Thank you for chatting with us. Have a great day!"
            }
          ]
        }
      ]
    }
  ]
}