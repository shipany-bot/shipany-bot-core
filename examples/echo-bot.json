{
  "$schema": "https://shipany.bot/schemas/bot/v1.0.json",
  "name": "Echo bot",
  "description": "A simple echo bot",
  "version": "1.0",
  "conversations": [
    {
      "$id": "echo",
      "activations": [
        {
          "event": "on-message",
          "next-step": "reply-in-return"
        }
      ],
      "steps": [
        {
          "$id": "reply-in-return",
          "actions": [
            {
              "type": "reply",
              "content": "{{message.text}}"
            }
          ]
        }
      ]
    }
  ]
}